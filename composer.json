  "authors": [
    {
      "name": "n3vrax",
      "email": "tibi@apidemia.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "psr/http-message": "^1.0",
    "http-interop/http-middleware": "^0.4.1",
    "zendframework/zend-expressive-router": "^2.0",
    "zendframework/zend-servicemanager": "^3.3.0",

    "dotkernel/dot-rbac": "^0.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3",

    "zendframework/zend-diactoros": "^1.3",
    "zendframework/zend-stdlib": "^3.0",

    "dotkernel/dot-controller": "^0.2",
    "dotkernel/dot-authentication": "^0.1",
    "dotkernel/dot-flashmessenger": "^0.2"
  },
  "autoload": {
    "psr-4": {
      "Dot\\Rbac\\Guard\\": "src/"
