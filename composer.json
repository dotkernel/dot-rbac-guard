{
    "name": "dotkernel/dot-rbac-guard",
    "type": "library",
    "description": "DotKernel RBAC guards component",
    "license": "MIT",
    "homepage": "https://github.com/dotkernel/dot-rbac-guard",
    "keywords": [
        "laminas",
        "mezzio", 
        "rbac-guard",
        "rbac"
    ],
    "authors": [
        {
            "name": "DotKernel Team",
            "email": "team@dotkernel.com"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "mezzio/mezzio-router": "^3.8",
        "mezzio/mezzio-template": "^2.4",
        "laminas/laminas-servicemanager": "^3.11",
        "laminas/laminas-diactoros": "^2.9",
        "laminas/laminas-stdlib": "^3.7",
        "dotkernel/dot-rbac": "^3.3",
        "dotkernel/dot-authentication": "^2.3",
        "dotkernel/dot-controller": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2.6",
        "laminas/laminas-coding-standard": "^2.5",
        "vimeo/psalm": "^5.13"
    },
    "autoload": {
        "psr-4": {
            "Dot\\Rbac\\Guard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DotTest\\Rbac\\Guard\\": "test/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "static-analysis": "psalm --shepherd --stats"
    }
}
